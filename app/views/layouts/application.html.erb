<!DOCTYPE html>
<html>
<head>
  <title>Chat App</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag  "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/slim-select@1.27.1/dist/slimselect.min.css" %>
  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/slim-select@1.27.1/dist/slimselect.min.js" %>
  <%= yield :head %>
</head>

<body class="bg-gray-50">
  <nav class="bg-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-14 flex items-center justify-between">
      <%= link_to "Chat App", root_path, class: "text-lg font-semibold" %>
      <div class="flex items-center gap-4">
        <% if user_signed_in? %>
          <%= link_to "Conversations", conversations_path, class: "px-3 py-2 rounded-md text-sm hover:bg-blue-700" %>
          <%= link_to "Users", users_path, class: "px-3 py-2 rounded-md text-sm hover:bg-blue-700" %>
          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-3 py-2 rounded-md text-sm bg-blue-700 hover:bg-blue-800" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "px-3 py-2 rounded-md text-sm hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>
  </nav>

  <% if user_signed_in? && (controller_name == 'conversations' || controller_name == 'messages') %>
    <!-- Chat Layout with Sidebar -->
    <div class="flex h-screen bg-gray-50" style="height: calc(100vh - 56px);">
      <!-- Sidebar -->
      <div class="w-80 bg-white border-r border-gray-200 flex-shrink-0">
        <%= yield :sidebar %>
      </div>
      
      <!-- Main Content -->
      <div class="flex-1 flex flex-col">
        <%= render "shared/flash" if notice || alert %>
        <%= yield %>
      </div>
    </div>
  <% else %>
    <!-- Regular Layout -->
    <div class="container mt-4">
      <%= render "shared/flash" if notice || alert %>
      <%= yield %>
    </div>
  <% end %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<%= render 'users/edit_form' if user_signed_in? %>
</html>